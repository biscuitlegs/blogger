<h1>All Tags</h1>
<br>
<ul>
    <% @tags.each do |tag| %>
        <li><h3><%= link_to tag.name, tag_path(tag) %></h3></li>
        <p>
        <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Are you sure you want to delete this tag from ALL ARTICLES?"}%>
        </p>
        <br>
    <% end %>
</ul>
<br>
<%= link_to "<< Back to all Articles", articles_path%>